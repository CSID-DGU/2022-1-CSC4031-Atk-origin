{
  "manifest_version": 2,

  "name": "ATK Speech-to-Text",
  "description": "This extension converts English speech to text in real-time to assist English learners",
  "version": "0.0.1",
  "icons": {
    "128":"icon.png"
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "login.html",
    "default_title": "ATK Speech-to-Text"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js", "worker.js"],
    "persistent": true
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "downloads",
    "storage",
    "http://localhost/"
  ],
  "commands": {
    "start": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+U"
      },
      "description": "Start Capture"
    },
    "stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      },
      "description": "Stop Capture"
    }
  }
}
